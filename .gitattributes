# 자동 줄바꿈 처리
* text=auto

# 텍스트 파일 - LF로 통일
*.java text eol=lf
*.kt text eol=lf
*.kts text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.sql text eol=lf
*.sh text eol=lf

# Windows 스크립트 - CRLF 유지
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# 바이너리 파일 - diff 하지 않음
*.jar binary
*.war binary
*.ear binary
*.zip binary
*.tar.gz binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Gradle wrapper는 실행 가능하도록
gradlew text eol=lf
gradlew.bat text eol=crlf

# 언어 통계에서 제외할 파일
*.gradle linguist-language=Gradle
*.gradle.kts linguist-language=Gradle